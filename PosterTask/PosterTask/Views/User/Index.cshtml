
@{
    int x = 1; 
}



<a href="/user/addform"><button class="btn btn-outline-success">Add User</button></a>
<br/>
<br/>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Email</th>
            <th scope="col">Handle</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <th scope="row">@(x++)</th>
                <td>@user.Name</td>
                <td>@user.Age</td>
                <td>@user.Email</td>
                <td>
                    <a href="/user/details/@user.Id"><button class="btn btn-outline-primary">Details</button></a>
                    <a href="/user/DeleteUser/@user.Id"><button class="btn btn-danger">Delete</button></a>
                    <a href="/user/EditForm/@user.Id"><button class="btn btn-outline-secondary">Edit</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>