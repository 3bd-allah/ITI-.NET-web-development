
@{
    int x = 1; 
}



<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Email</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <th scope="row">@(x++)</th>
                <td>@user.Name</td>
                <td>@user.Age</td>
                <td>@user.Email</td>
                <td><a href="/user/details/@user.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>