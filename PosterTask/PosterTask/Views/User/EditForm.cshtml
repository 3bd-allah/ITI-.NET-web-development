@{
}
@model User; 
<form method="post" action="/User/EditAction/">
    <input hidden name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" aria-describedby="emailHelp" name="Name" value=@Model.Name>
    </div>
    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" class="form-control" id="age" aria-describedby="emailHelp" name="Age" value=@Model.Age>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>