@model User;

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">@Model.Age years old</h6>
        <p class="card-text"><b>Email: </b> @Model.Email</p>
        <p class="card-text"><b>Password: </b> @Model.Password</p>
    <a href="/user/index" class="card-link">Back to All</a>
  </div>
</div>